<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!--不生成注释-->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/YKAT?characterEncoding=utf8"
                        userId="root"
                        password="hyx">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- javaBean生成位置 -->
        <javaModelGenerator targetPackage="com.PT.entity" targetProject="\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <!-- sql映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="mapper"  targetProject="\src\main\resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>
        <!-- 指定dao接口生成的位置 ，mapper接口-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.PT.dao"  targetProject="\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--  指定每个表生成的策略-->
        <!--<table tableName="bankcard_relations" domainObjectName="BackcardRelation" ></table>-->
        <table tableName="bankcards" domainObjectName="Bankcard" ></table>
        <table tableName="deposit_recharge_records" domainObjectName="DepositRechargeRecord" ></table>
        <table tableName="drivers" domainObjectName="Driver" ></table>
        <!--<table tableName="employee_relations" domainObjectName="EmployeeRelation" ></table>-->
        <table tableName="kbs" domainObjectName="KBS" ></table>
        <table tableName="managers" domainObjectName="Manager" ></table>
        <table tableName="orders" domainObjectName="Order" ></table>
        <table tableName="projects" domainObjectName="Project" ></table>
        <table tableName="receive_money_records" domainObjectName="ReceiveMoneyRecord" ></table>
        <table tableName="settle_account_records" domainObjectName="SettleAccRecord" ></table>
        <table tableName="users" domainObjectName="User" ></table>

    </context>
</generatorConfiguration>
